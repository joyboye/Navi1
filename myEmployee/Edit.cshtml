@model Navi2.Pages.myEmployee.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employees.EID" />
            <div class="form-group">
                <label asp-for="Employees.FName" class="control-label"></label>
                <input asp-for="Employees.FName" class="form-control" />
                <span asp-validation-for="Employees.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.LName" class="control-label"></label>
                <input asp-for="Employees.LName" class="form-control" />
                <span asp-validation-for="Employees.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.Date" class="control-label"></label>
                <input asp-for="Employees.Date" class="form-control" />
                <span asp-validation-for="Employees.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.Approved" class="control-label"></label>
                <input asp-for="Employees.Approved" class="form-control" />
                <span asp-validation-for="Employees.Approved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employees.DID" class="control-label"></label>
                <select asp-for="Employees.DID" class="form-control" asp-items="ViewBag.DID"></select>
                <span asp-validation-for="Employees.DID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

